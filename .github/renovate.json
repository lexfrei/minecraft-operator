{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "labels": ["dependencies"],
  "regexManagers": [
    {
      "fileMatch": ["\\.github/workflows/.*\\.ya?ml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*)\\n.*?[\"']?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)[\"']?"
      ]
    },
    {
      "fileMatch": ["^Makefile$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*)\\n.*?[\"']?(?<currentValue>v?\\d+\\.\\d+\\.\\d+)[\"']?"
      ]
    },
    {
      "fileMatch": ["^build/Containerfile$"],
      "matchStrings": [
        "FROM (?<depName>.*?):(?<currentValue>[\\d.]+-[\\w.]+)",
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*)\\n.*?=(?<currentValue>.*)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchManagers": ["github-actions"],
      "automerge": true
    },
    {
      "matchDepNames": ["golang"],
      "matchUpdateTypes": ["minor"],
      "automerge": true
    },
    {
      "matchDepPatterns": ["^ghcr.io/", "^docker.io/"],
      "enabled": false,
      "description": "Disable updates for our own images"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  }
}
